<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".develop.MainActivity"
    tools:showIn="@layout/activity_main">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.mg.axe.androiddevelop.view.MyProgress
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="100"
        android:padding="5dp"
        />

    <com.mg.axe.androiddevelop.view.MyProgress
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="50"
        app:progress_unreach_color="#444ff000"
        app:progress_text_color="#FCBFEE"
        android:padding="5dp"
        />

    <com.mg.axe.androiddevelop.view.MyProgress
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="50"
        app:progress_text_offset="18dp"
        app:progress_unreach_color="#444ff000"
        app:progress_text_color="#FCBFEE"
        android:padding="5dp"
        android:background="#B9B7FA"
        />

    <com.mg.axe.androiddevelop.view.MyProgress
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"

        />

    <com.mg.axe.androiddevelop.view.RoundProgress

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:radius="30dp"
        app:test="one"
        android:progress="50"
        app:progress_reach_color="@color/colorAccent"
        app:progress_unreach_color="@color/colorPrimary"
        />

    <com.mg.axe.androiddevelop.view.RoundProgress

        android:id="@+id/roundprogress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:radius="50dp"
        android:progress="0"
        app:progress_reach_color="@color/colorAccent"
        app:progress_unreach_color="#444ff000"
        app:progress_text_color="#FCBFEE"
        />

        <com.mg.axe.androiddevelop.view.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="不祥之刃"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="疾風劍豪"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="德瑪西亞"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="是是是"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="哈撒开,托利亚开通"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="翻滚吧,牛宝宝"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.mg.axe.androiddevelop.view.FlowLayout>

        <com.mg.axe.androiddevelop.view.FlowLayout
            android:id="@+id/flowlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.mg.axe.androiddevelop.view.FlowLayout>
    </LinearLayout>

    </ScrollView>
</LinearLayout>
